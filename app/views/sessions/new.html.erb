<%if flash[:notice] %>
  <p><%= flash[:notice]%></p>
<%end%>

<div class="login">
	<div class="container">
		<div class="form">
      <h1>Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %> 
        <%= f.text_field :name || :email, :placeholder => "Nombre Usuario o Email" %> 
        <br>
        <br>
        <%= f.password_field :password, :placeholder => "Password" %> 
        <br>
        <br>
        <%= f.submit "Entrar", class: "btn-submit" %>
        <br>
        <br>
      <% end %>
      <%= link_to "forgotten password?",new_password_reset_path %>
    </div>
	</div>
</div>