<div class="login">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
      <%= form_for(:session, url: login_path) do |f| %> 
        <%= f.text_field :name, :placeholder => "Nombre Usuario" %> 
        <br>
        <br>
        <%= f.password_field :password, :placeholder => "Password" %> 
        <br>
        <br>
        <%= f.submit "Entrar", class: "btn-submit" %>
      <% end %>
    </div>
	</div>
</div>