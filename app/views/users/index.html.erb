<%if flash[:notice] %>
  <p><%= flash[:notice]%></p>
<%end%>
<h1>Usuarios</h1>
 
<table>
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th>Celular</th>
    <% if current_user && current_user.admin? %>
        <th>Tienda</th>
    <%end%>
    <th colspan="2"></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.cellphone %></td>
      <% if current_user && current_user.admin? %>
        <td><%= user.store.name %></td>
      <%end%>
      <% if current_user%>
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', destroy_user_path(user),
                      method: :patch,action: 'destroy', data: { confirm: 'Seguro?' } %></td>
      <%end%>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Nuevo Usuario', user_new_path %>